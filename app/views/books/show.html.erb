<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class ="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= render "new_book", book: @new_book %>
    </div>

    <div class ="col-md-8 offset-md-1" >
      <div class="row">
        <div class="col-12 p-0">
          <h2>Book detail</h2>
        </div>
      </div>

      <div class="row body-row">
        <% if @user == current_user %>
          <div class="col-md-4 table-body">
            <%= link_to user_path(@user) do%>
              <%= image_tag @user.get_profile_image(100, 100) %>
              <p><%= @user.name %></p>
            <%end%>
          </div>
          <div class="col-md-2 table-body">
            <%= link_to book_path(@book) do%>
              <%= @book.title %>
            <%end%>
          </div>
          <div class="col-md-2 table-body">
            <%= @book.body %>
          </div>
          <div class="col-md-2 table-body">
            <%= link_to edit_book_path(@book), class:"btn btn-success btn-sm" do%>
              Edit
            <% end %>
          </div>
          <div class="col-md-2  table-body">
            <%= link_to book_path(@book), class:"btn btn-danger btn-sm", method: :delete do%>
              Destroy
            <% end %>
          </div>
        <% else %>
          <div class="col-md-2 table-body">
            <%= link_to user_path(@user) do%>
              <%= image_tag @user.get_profile_image(100, 100) %>
              <p><%= @user.name %></p>
            <%end%>
          </div>
          <div class="col-md-2 table-body">
            <%= link_to book_path(@book) do%>
              <%= @book.title %>
            <%end%>
          </div>        
          <div class="col-md-8 table-body">
            <%= @book.body %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
