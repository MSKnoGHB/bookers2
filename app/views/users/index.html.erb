<div class="container">
  <div class="row">
    <div class ="col-3">
      <%= render "user_info", user:@user %>
      <%= render "books/new_book", book:@new_book %>
    </div>

    <div class ="col-8 offset-1" >
      <div class="row">
        <div class="col-12 p-0">
          <h2>Users</h2>
        </div>
      </div>
      <div class="row header-row">
        <div class="col-5 table-header">image</div>
        <div class="col-4 table-header">name</div>
        <div class="col-3 table-header"></div>
      </div>
      <% @users.each do |user|%>
        <div class="row body-row">
          <div class="col-5 table-body"><%= image_tag user.get_profile_image(100, 100) %></div>
          <div class="col-4 table-body"><%= user.name %></div>
          <div class="col-3 table-body"><%= link_to "Show", user_path(user)%></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
